# Production Environment Configuration
# IMPORTANT: Replace all values marked with YOUR_* before deploying!

# Application Configuration
APP_NAME=the_hive
APP_ENV=production
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_STRONG_DB_PASSWORD@db:5432/the_hive
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_STRONG_DB_PASSWORD
POSTGRES_DB=the_hive

# Security - Generate with: openssl rand -hex 32
SECRET_KEY=YOUR_GENERATED_SECRET_KEY_HERE
ADMIN_SESSION_SECRET=YOUR_GENERATED_ADMIN_SECRET_HERE

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration - Replace YOUR_SERVER_IP with actual IP
CORS_ORIGINS=http://YOUR_SERVER_IP,http://YOUR_SERVER_IP:80

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Frontend - Replace YOUR_SERVER_IP with actual IP
VITE_API_BASE_URL=http://YOUR_SERVER_IP/api/v1
